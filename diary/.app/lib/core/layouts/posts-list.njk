<ol class="postlist">
    {% for post in collections.publishedPosts | reverse %}
        <li class="postlist-item">
            <a href="{{ post.url }}" class="postlist-link">
                {% if post.data.title %}
                    {{ post.data.title }}
                {% else %}
                    <code>{{ post.url }}</code>
                {% endif %}
                <div class="pl-tags">
                    {% for tag in post.data.tags  | reject("", "posts") %}
                        <span class="pl-tag">{{ tag }}</span>
                    {% endfor %}
                    <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time>
                </div>
            </a>
            <p class="excerpt">
                {% excerpt post %}
            </p>
        </li>
    {% endfor %}
</ol>